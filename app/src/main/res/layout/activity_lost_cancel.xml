<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.ms214.cheongwonpay20.LostCancelActivity"
    android:orientation="vertical"
    android:background="#eee">

    <!--분실신고 Activity-->

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="타이틀바"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#2bb22b"
    />


    <TextView
        android:id='@+id/bartv'
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="바코드:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/title"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:text="이름 : "
        android:textSize="15sp"
        android:layout_below="@id/bartv"/>

    <Button
        android:id="@+id/bar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바코드 인식"
        android:background="@drawable/button_line"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"
        android:layout_below="@id/name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/bar_btn">

        <Button
            android:id='@+id/submit'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제출"
            android:textColor="#80000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_line"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id='@+id/cancel'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="#80000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_line"
            android:layout_marginStart="10dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>